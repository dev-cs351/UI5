<!-- 
    CustomerInfo.fragment.xml 파일에는
    선택한 고객 정보 중 테이블에서 보여주지 못한 정보까지 모두 출력한다.
-->

<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="idCustomerInfoDialog"
        title="{
            parts: [
                'i18n>dialogTitle',
                'ContactName'
            ],
            formatter: '.formatMessage'
        }"
    >
        <content>
            <!-- columnsXL="-1" : 보다 작은 사이즈의 값들과 같은 값을 가진다. -->
            <!-- 참고: sapUiResponsiveMargin에서 small 사이즈부터 양옆 여백이 없어진다. -->
            <f:SimpleForm
                layout="ColumnLayout"
                columnsXL="-1"
                columnsL="2"
                columnsM="2"
            >
                <core:Title text="{i18n>dialogSimplformGeneralTItle}"/>
                <!-- 고객ID -->
                <Label text="{i18n>columnTextCustomerID}" />
                <Input value="{CustomerID}" editable="false"/>

                <!-- 회사 -->
                <Label text="{i18n>columnTextCompanyName}" />
                <Input value="{CompanyName}" editable="false"/>

                <!-- 담당자 -->
                <Label text="{i18n>columnTextContactName}" />
                <Input value="{ContactName}" editable="false"/>

                <core:Title text="{i18n>dialogSimplformAddressTItle}"/>

                <!-- 주소 -->
                <Label text="{i18n>columnTextAddress}" />
                <Input value="{Address}" editable="false"/>

                <!-- 우편번호 -->
                <Label text="{i18n>columnTextPostalCode}" />
                <Input value="{PostalCode}" editable="false"/>

            </f:SimpleForm>
        </content>
        <beginButton>
            <Button 
                text="{i18n>closeButtonText}"
                press=".onCloseDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>