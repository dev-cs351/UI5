<mvc:View controllerName="code.d07.exercise32.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page id="page" title="{i18n>title}">
        <Panel 
            headerText="{i18n>customerPanelTitle}"
            expandable="true"
            expanded="true"
            height="300px"
            width="auto"
            class="sapUiResponsiveMargin"
        >
        <!-- 
            sap.m.Table은 items에 sap.m.ColumnListItem만 사용한다.
            sap.m.List는 items에 주로 다음과 같은 ListItem들을 사용한다.
            - sap.m.StandardListItem
            - sap.m.ObjectListItem
            - sap.m.CustomListItem
            - sap.m.InputListItem
            - sap.m.FeedListItem
            - 등등
        -->

            <Table
                id="idTable"
                items="{/Customers}"
                mode="SingleSelectLeft"
                selectionChange=".onTableSelectionChange"
            >
                
                <columns>
                    <Column><header><Text text="{i18n>columnTextCustomerID}"/></header></Column>
                    <Column><header><Text text="{i18n>columnTextCompanyName}"/></header></Column>
                    <Column><header><Text text="{i18n>columnTextContactName}"/></header></Column>
                    <Column><header><Text text="{i18n>columnTextContactTitle}"/></header></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <ObjectIdentifier title="{CustomerID}"/>
                        <Text text="{CompanyName}"/>
                        <Text text="{ContactName}"/>
                        <Text text="{ContactTitle}"/>
                    </ColumnListItem>
                </items>
            
            </Table>
        
        </Panel>
    </Page>
</mvc:View>