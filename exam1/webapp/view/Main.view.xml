<mvc:View controllerName="code.d07.exam1.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"    
    xmlns:core="sap.ui.core"
>
    <Page id="page" title="{i18n>title}">
        <!-- 숫자 입력, 결과 출력 -->
        <f:SimpleForm
            layout="ResponsiveGridLayout"
            editable="true"
            class="sapUiResponsiveMargin"
            width="auto"
        >
            <!-- 숫자 입력 -->
            <core:Title text="{i18n>formContainerInputTitle}"/>
            <!-- 숫자입력 1 -->
        <!-- 
            *입력과 라벨은 항상 labelfor로 묶어준다.* 
        -->
            <Label 
                text="{i18n>labelInputValue1}"
                labelFor="idValue1"
            />
            <Input 
                id="idValue1"
                value="{
                    path: '/Input/num1',
                    type:  'sap.ui.model.type.Float'
                }"
                required="true"
            />

            <!-- 숫자입력 2 -->
            <Label 
                text="{i18n>labelInputValue2}"
                labelFor="idValue2"
            />
            <Input 
                id="idValue2"
                value="{
                    path: '/Input/num2',
                    type:  'sap.ui.model.type.Float', 
                    constraints: {
                        minimum: 1
                    }
                }"
                required="true"
            />

            <!-- 결과 출력 -->
            <core:Title text="{i18n>formContainerResultTitle}"/>

            <!-- 덧셈 출력 및 버튼 -->
            <Label text="{i18n>labelAdd}"/>
            <Text text="{/Output/Add}"
            />
            <Button 
                text="{i18n>buttonTextAdd}"
                press=".onButtonAdd"
            />

            <!-- 뺄셈 출력 및 버튼 -->
            <Label text="{i18n>labelSub}"/>
            <Text text="{/Output/Sub}"/>
            <Button 
                text="{i18n>buttonTextSub}"
                press=".onButtonSub"
            />

            <!-- 곱셈 출력 및 버튼 -->
            <Label text="{i18n>labelMul}"/>
            <Text text="{/Output/Mul}"/>
            <Button 
                text="{i18n>buttonTextMul}"
                press=".onButtonMul"
            />

            <!-- 나눗셈 출력 및 버튼 -->
            <Label text="{i18n>labelDiv}"/>
            <Text text="{/Output/Div}"/>
            <Button 
                text="{i18n>buttonTextDiv}"
                press=".onButtonDiv"
            />
        </f:SimpleForm>
    </Page>
</mvc:View>