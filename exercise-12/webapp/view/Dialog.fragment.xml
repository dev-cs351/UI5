<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Dialog 
        id="idDialog"
        title="Info"
        type="Message"
        class="sapUiResponsiveMargin">

        <!-- Dialog의 내용을 다루는 aggregation -->
        <content>
            <Text text="고객 정보는 나중에 OData 서비스에 저장된다." class="sapUiSmallMargin"/>
        </content>

        <!-- Dialog 하단의 시작 버튼을 다루는 aggregation -->
        <beginButton>
            <Button 
                text="OK"
                press=".onCloseDialog"
                class="sapUiResponsiveMargin"/>
        </beginButton>
    </Dialog>
    
</core:FragmentDefinition>