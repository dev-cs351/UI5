<mvc:View controllerName="code.d07.exercise29.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="idPage"
        title="{i18n>detailPageTitle}"
    >
        <VBox>
            <Text text="{
                parts: [
                        'i18n>detailTexts',
                        { path: 'OrderID' }
                    ],
                formatter: '.formatMessage'
            }"/>
            <Text text="고객ID: {CustomerID}"/>
            <Text 
                text="주문일자: {
                    path:'OrderDate',
                    type:'sap.ui.model.type.Date',
                    formatOptions: {
                        pattern: 'yyyy-MM-dd'
                    }
                }"/>
            <Text text="출발지: {ShipCity}"/>
            <Text text="수송선: {ShipName}"/>
            <Text text="{Order_Details}"/>
            
        </VBox>
    </Page>
</mvc:View>