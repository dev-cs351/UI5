<mvc:View controllerName="code.d07.exercise29.controller.Order"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <!--<Text text="{/Orders(10248)/CustomerID}"/>-->
        <Panel
            id="idPanel"
            expandable="true"
            expanded="true"
            headerText="{i18n>panelTitle}"
            class="sapUiResponsiveMargin"
            width="auto"
        >
        
            <content>
                <List 
                    id="idOrderlist"
                    items="{/Orders}"
                    growing="true"
                    growingThreshold="10"
                >
                    <items>
                        <ObjectListItem 
                            title="주문ID: {OrderID}"
                            type="Navigation"
                            press=".onItemPress"
                            number="무게: { 
                                path: 'Freight',
                                type: 'sap.ui.model.type.Float',
                                constraints: {},
                                formatOptions: {}
                            }"
                            numberUnit="KG"
                        >

                        <attributes>
                            <ObjectAttribute title="고객ID" text="{CustomerID}"/>
                            <ObjectAttribute 
                                title="주문일자" 
                                text="{ 
                                    path: 'OrderDate',
                                    type: 'sap.ca.ui.model.type.Date',
                                    formatOptions:{
                                        pattern: 'yyyy-MM-dd'
                                    }
                                }"/>
                        </attributes>

                        </ObjectListItem>
                    </items>
                </List>
            </content>
        
        </Panel>

    </Page>
</mvc:View>