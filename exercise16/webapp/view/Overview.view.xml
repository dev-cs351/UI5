<mvc:View controllerName="code.d07.exercise16.controller.Overview"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page id="page" title="{i18n>title}">
        <Panel 
            headerText="Exercise16"
            class="sapUiResponsiveMargin"
        >
        
        </Panel>
        <f:SimpleForm
            class="sapUiResponsiveMargin"
        >
            <f:content>
                <core:Title text="데이터 타입 연습" />
                <Label text="정수만 입력 가능" />
                <Input value="{
                    path:'view>/Int',
                    type:'sap.ui.model.type.Integer',
                    constraints: {
                        minimum: 10,
                        maximum: 100
                    }
                }"/>
                <Text text="{view>/Int}" />
                <Label text="날짜 출력" />
                <Input value="{
                    path: 'view>/Date',
                    type: 'sap.ui.model.type.Date',
                    formatOptions: {
                        source: {
                            pattern: 'yyyy-MM-dd'
                        },
                        pattern: 'yyyy-MM-dd'
                    }
                }"/>
                <Text text="{
                    path:'view>/Date',
                    type:'sap.ui.model.type.Date',
                    formatOptions: {
                        source: {
                            pattern: 'yyyy-MM-dd'
                        },
                        pattern: 'yyyy.MM.dd(E)'
                    }
                }" />
                
                <Label text="금액만 입력 가능" />
                <!-- 입력 타입 float -->
                <Input value="{
                    path: 'view>/Currency/Value',
                    type: 'sap.ui.model.type.float'
                }"/>
                <Input value="{
                    path:'view>/Currency/Key',
                    type:'sap.ui.model.type.String',
                    constraints:{
                        minLength: 3,
                        maxLength: 3
                    }
                }"/>
                <Label text="가지고 싶다"/>
                <!-- 출력 타입 Currency 
                    화폐 출력은 값과 통화 2가지를 출력하기 때문에,
                    경로를 2가지 써야하고, parts를 이용한다.    -->
                <ObjectNumber
                    number="{
                        parts:[
                            {path:'view>/Currency/Value'},
                            {path:'view>/Currency/Key'}
                        ],
                        type:'sap.ui.model.type.Currency',
                        formatOptions: {showMeasure: false}
                    }"
                    unit="{view>/Currency/Key}"
                />
            </f:content>
        </f:SimpleForm>
    </Page>
</mvc:View>