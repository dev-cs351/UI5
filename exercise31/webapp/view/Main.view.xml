<mvc:View
    controllerName="code.d07.exercise31.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
    >

        <Panel
            headerText="{i18n>panelHeaderText}"
            expandable="true"
            expanded="true"
        >
            <headerToolbar>
                <Toolbar >
                    <Title text="{i18n>panelToolbarTitle}"/>
                    <ToolbarSpacer />
                    <Button 
                        text="{i18n>buttonText}" 
                        type="Attention"
                    />
                    <ComboBox
                        id="idComboBox"
                        selectionChange=".onComboBoxSelectionChange"
                        selectedKey="A"
                    >
                        <items>
                            <core:Item key="A" text="전체"/>
                            <core:Item key="M" text="남자"/>
                            <core:Item key="F" text="여자"/>
                        </items>
                    </ComboBox>
                </Toolbar>
            </headerToolbar>

            <content>
                <List
                    id="idList"
                    items="{member>/Members}"
                >
                    <items>
                        <StandardListItem 
                            title="{member>name} 님"
                            description="{member>gender}"
                        />
                    </items>
                </List>
            </content>


        </Panel>

    </Page>
</mvc:View>
