<mvc:View controllerName="code.d07.hw1c2.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">

        <content>
        
            <Table 
                id="idMemberTable"
                headerText="{i18n>memberTableTitle}"
                items="{member>/Member}"
                mode="SingleSelectLeft"
                selectionChange=".onSelectionChange"
            >
            
                <columns>
                    <Column><Text text="{i18n>columnTextName}"/></Column>
                    <Column><header><Text text="{i18n>columnTextGender}"/></header></Column>
                    <Column><header><Text text="{i18n>columnTextAdress}"/></header></Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <ObjectIdentifier 
                            title="{member>Name}"
                        />
                        <Text text="{member>Gender}"/>
                        <Text text="{member>Address}"/>
                    </ColumnListItem>
                </items>

            </Table>

            <!-- 특정 조원의 상세 정보 -->
            <Table 
                id="idDetailTable"
                headerText="{i18n>memberDetailTableTitle}"
                items="{member>_Details}"
            >
            
                <columns>
                    <Column><header><Text text="{i18n>columnTextMenu}"/></header></Column>
                    <Column><header><Text text="{i18n>columnTextType}"/></header></Column>
                    <Column><header><Text text="{i18n>columnTextDay}"/></header></Column>
                    <Column><header><Text text="{i18n>columnTextPrice}"/></header></Column>
                    <Column><header><Text text="{i18n>columnTextPlace}"/></header></Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <Text text="123"/>
                    </ColumnListItem>
                </items>

            </Table>
        
        </content>

    </Page>
</mvc:View>