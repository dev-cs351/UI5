<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Dialog
        id="idDialog"
    >
        <content>
            <!-- 선택한 고객의 BindingContext를 가져와서, 아래 idOrderTable에 BindingContext를 기록하여
                고객의 주문 내역을 출력하도록 한다.
                이떄 선택한 고객의 주문 내역 데이터는 다음과 같다.
                OrderID, OrderDate, RequiredDate, ShippedDate, ShipName, ShipCity, ChipCountry -->
            <Table 
                id="idOrderTable"
                headerText="{i18n>orderTableTitle}"
                items="{/Orders}">

                <columns>
                    <Column><header><Text text="{i18n>columnTextOrderID}"></Text></header></Column>
                    <Column><header><Text text="{i18n>columnTextDate}"></Text></header></Column>
                    <Column><header><Text text="{i18n>columnTextRequiredDate}"></Text></header></Column>
                    <Column><header><Text text="{i18n>columnTextShippedDate}"></Text></header></Column>
                    <Column><header><Text text="{i18n>columnTextShipName}"></Text></header></Column>
                    <Column><header><Text text="{i18n>columnTextShipCity}"></Text></header></Column>
                    <Column><header><Text text="{i18n>columnTextShipCountry}"></Text></header></Column>
                </columns>
                
                <items>
                    <ColumnListItem >
                        <cells>
                            <ObjectIdentifier title="{OrderID}"/>
                            <Text text="{
                                path: 'OrderDate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'yyyy-MM-dd'
                                }
                            }"/>
                            <Text text="{
                                path: 'RequiredDate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'yyyy-MM-dd'
                                }
                            }"/>
                            <Text text="{
                                path: 'ShippedDate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'yyyy-MM-dd'
                                }
                            }"/>
                            <Text text="{ShipName}"/>
                            <Text text="{ShipCity}"/>
                            <Text text="{ShipCountry}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>

        <beginButton>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>