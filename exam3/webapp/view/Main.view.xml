<mvc:View controllerName="code.d07.exam3.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
>
    <Page id="page" title="{i18n>title}">
        <!-- 직원 목록 테이블 
            Employees 정보 바인딩
            SingleSelectMaster 모드로 한번에 하나의 행만 선택
            이벤트 selectionChange으로 onOpenDetailDialog함수 실행-->
        <Table 
            items="{/Employees}"
            headerText="{i18n>tableTitle}"
            class="sapUiResponsiveMargin"
            width="auto"
        >
            <CheckBox text="test"/>
            <columns>
                <Column><header><Text text="{i18n>columnEmployID}"  /></header></Column>
                <Column><header><Text text="{i18n>columnTItleOfCourtesy}({i18n>columnTItleOfCourtesyDetail})"/></header></Column>
                <Column><header><Text text="{i18n>columnFirstName}({i18n>columnFirstNameDetail})"            /></header></Column>
                <Column><header><Text text="{i18n>columnTitle}({i18n>columnTitleDetail})"                    /></header></Column>
                <Column><header><Text text="{i18n>columnHireDate}"  /></header></Column>
                <Column><header><Text text="{i18n>columnCountry}"   /></header></Column>
            </columns>
            <items>
                <!-- Navigation 타입 설정 -->
                <ColumnListItem
                    type="Navigation"
                    press=".onOpenDetailDialog"
                >
                    <ObjectIdentifier title="{EmployeeID}"/>
                    <Text text="{TitleOfCourtesy} {LastName}"/>
                    <Text text="{FirstName}"/>
                    <Text text="{Title}"/>
                    <!-- 년도 타입 및 표기법 설정 -->
                    <Text text="{
                        path: 'HireDate',
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {
                            pattern: 'yyyy.MM.dd'
                        }
                    }"/>
                    <Text text="{Country}"/>
                </ColumnListItem>
            </items>
        </Table>

        <f:Card 
            class="sapUiResponsiveMargin"
            width="300px"
        >
            <f:header>

            </f:header>
        </f:Card>
    </Page>
</mvc:View>